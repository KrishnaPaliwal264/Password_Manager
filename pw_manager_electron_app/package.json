{
  "name": "pw_manager_electron_app",
  "version": "1.0.0",
  "description": "Password Manager Electron App",
  "main": "public/electron.js",
  "homepage": "./",
  "private": true,
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "reactjs-popup": "^2.0.6"
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/preset-env": "^7.14.2",
    "@babel/preset-react": "^7.13.13",
    "babel-loader": "^8.2.2",
    "concurrently": "^6.2.0",
    "cross-env": "^7.0.3",
    "css-loader": "^5.2.6",
    "electron": "^13.1.2",
    "electron-builder": "^22.11.7",
    "electron-is-dev": "^2.0.0",
    "html-webpack-plugin": "^5.3.1",
    "style-loader": "^2.0.0",
    "wait-on": "^5.3.0",
    "webpack": "^5.38.1",
    "webpack-cli": "^4.7.0",
    "webpack-dev-server": "^3.11.2"
  },
  "scripts": {
    "react-start": "webpack serve --mode development",
    "react-build": "webpack --mode production",
    "electron-build": "electron-builder --win --linux",
    "build": "npm run react-build && npm run electron-build",
    "start": "concurrently \"cross-env BROWSER=none npm run react-start\" \"wait-on http://localhost:3000 && electron .\"",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --win --linux"
  },
  "build": {
    "appId": "com.pw_manager.pw_manager_electron_app",
    "productName": "Password Manager",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "public/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "target": ["dmg"],
      "category": "public.app-category.utilities",
      "icon": "assets/macOS/password_icon.icns"
    },
    "win": {
      "target": [
        "nsis",
        "msi"
      ],
      "icon": "assets/windows/password_icon.png"
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "AppImage"
      ],
      "category": "Utility",
      "icon": "assets/linux/password_icon.png"
    }
  },
  "author": {
    "name": "Krishna Paliwal",
    "email": "krishna.plwl264@gmail.com"
  }
}